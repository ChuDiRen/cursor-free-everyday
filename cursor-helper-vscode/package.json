{
  "name": "cursor-helper",
  "displayName": "Cursor Helper - 免费助手",
  "description": "完全免费的 Cursor 助手工具，提供设备ID重置、邮箱验证码接收等功能",
  "version": "1.0.0",
  "publisher": "ChuDiRen",
  "author": {
    "name": "ChuDiRen",
    "email": "1923681655@qq.com"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "cursor",
    "ai",
    "helper",
    "free",
    "claude",
    "gemini"
  ],
  "activationEvents": [
    "onCommand:cursor-helper.open",
    "onCommand:cursor-helper.resetDeviceId",
    "onCommand:cursor-helper.getVerificationCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-helper.open",
        "title": "打开 Cursor 助手",
        "category": "Cursor Helper"
      },
      {
        "command": "cursor-helper.resetDeviceId",
        "title": "重置设备ID",
        "category": "Cursor Helper"
      },
      {
        "command": "cursor-helper.getVerificationCode",
        "title": "获取验证码",
        "category": "Cursor Helper"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "cursor-helper.open",
          "when": "true"
        },
        {
          "command": "cursor-helper.resetDeviceId",
          "when": "true"
        },
        {
          "command": "cursor-helper.getVerificationCode",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "cursor-helper.open",
          "group": "cursor-helper",
          "when": "true"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cursor-helper.open",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "true"
      }
    ],
    "configuration": {
      "title": "Cursor Helper",
      "properties": {
        "cursor-helper.emailServer": {
          "type": "string",
          "default": "http://14.103.190.198:5362",
          "description": "邮箱验证码服务器地址"
        },
        "cursor-helper.autoBackup": {
          "type": "boolean",
          "default": true,
          "description": "是否自动备份配置文件"
        },
        "cursor-helper.showWarnings": {
          "type": "boolean",
          "default": true,
          "description": "是否显示警告信息"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node scripts/build.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "clean": "rimraf out *.vsix",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "uuid": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChuDiRen/cursor-free-everyday.git"
  },
  "license": "MIT",
  "icon": "media/icon.png"
}
